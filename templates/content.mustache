{{!
    @template blocks_my_feedback/content
    Example context (json):
    {
        "showfeedbacktrackerlink": "true",
        "mods": [
         {
            "icon": "moodleurl/icon.png",
            "coursename": "A course",
            "name": "A mod",
            "url": "foo.php",
            "duedate": "10th Jan 2023",
            "tutorname": "Bob Smith",
            "date": "24th March 2023",
            "requiremarking": "3"
         }
        ]
    }
}}

{{! Mods for feedback and marking. }}
{{#showassessments}}
    <h3>{{assessmentheader}}</h3>
    {{#assessmentmods}}

        <div class="d-flex">

            <div class="mr-3 bg-cover bg-light rounded-circle flex-shrink-0" style="background-image: url('{{{icon}}}'); height: 4rem; width: 4rem;"></div>

            <div>
                <div class="line-clamp-1 text-muted">
                    <small>{{coursename}}</small>
                </div>
                <a href="{{{url}}}" class="font-weight-bold line-clamp-2">{{name}}</a>

                {{#duedate}}
                    <div class="small">
                        {{#str}} t:due, block_my_feedback {{/str}} {{duedate}}
                        {{#requiremarking}}
                            路 <a href="{{{markingurl}}}">{{requiremarking}} {{#str}} t:needmarking, block_my_feedback {{/str}}</a>
                        {{/requiremarking}}
                    </div>
                {{/duedate}}

                {{#releaseddate}}
                    <div class="small">
                        {{#tutorname}}{{.}} 路 {{/tutorname}} {{releaseddate}}
                    </div>
                {{/releaseddate}}
            </div>
        </div>
        <hr>
    {{/assessmentmods}}
{{/showassessments}}

{{#showmarkings}}
    <h3>{{markingheader}}</h3>
    {{#markingmods}}
        <div class="d-flex">

            <div class="mr-3 bg-cover bg-light rounded-circle flex-shrink-0" style="background-image: url('{{{icon}}}'); height: 4rem; width: 4rem;"></div>

            <div>
                <div class="line-clamp-1 text-muted">
                    <small>{{coursename}}</small>
                </div>
                <a href="{{{url}}}" class="font-weight-bold line-clamp-2">{{name}}</a>

                {{#duedate}}
                    <div class="small">
                        {{#str}} t:due, block_my_feedback {{/str}} {{duedate}}
                        {{#requiremarking}}
                            路 <a href="{{{markingurl}}}">{{requiremarking}} {{#str}} t:needmarking, block_my_feedback {{/str}}</a>
                        {{/requiremarking}}
                    </div>
                {{/duedate}}

                {{#releaseddate}}
                    <div class="small">
                        {{#tutorname}}{{.}} 路 {{/tutorname}} {{releaseddate}}
                    </div>
                {{/releaseddate}}
            </div>
        </div>
        <hr>
    {{/markingmods}}
{{/showmarkings}}

{{#showfeedbacktrackerlink}}
<div class="bg-light pt-2 pb-3 px-3">
    <a href="{{{ config.wwwroot }}}/report/feedback_tracker/">
        <i class="fa-solid fa-circle-arrow-right mr-2" aria-hidden="true"></i>{{#str}} feedbackreport, block_my_feedback {{/str}}
    </a>
    <br>
    <small>{{#str}} feedbackreportdescription, block_my_feedback {{/str}}</small>
</div>
<hr>
{{/showfeedbacktrackerlink}}