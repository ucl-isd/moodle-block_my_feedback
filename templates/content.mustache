    {
        "allfeedbackurl": "cgf/intervalurl/",
        "nofeedback": 0,
        "feedback": [
         {
            "icon": "moodleurl/icon.png",
            "coursename": "A course",
            "tutorname": "Bob Smith",
            "date": "24th March 2023"
         },
         {
            "icon": "moodleurl/icon.png",
            "coursename": "A course",
            "tutorname": "Rob Smith",
            "date": "24th April 2023"
         }
        ]

    }
}}

{{#feedback}}
<div class="mb-2">
    <div class="media">

        <div class="mr-3 bg-cover rounded-circle d-inline-block" style="background-image: url('{{{icon}}}'); height:3em; width: 3em;"></div>

        <div class="media-body">
            <small class="d-block">{{coursename}}</small>
            <a href="{{{link}}}" class="font-weight-bold">{{activityname}}</a>
        </div>

    </div>

    <div class='text-right'>
        <small>{{#tutorname}}{{.}} Â· {{/tutorname}} {{date}}</small>
    </div>

    <hr>

</div>
{{/feedback}}


{{#nofeedback}}
<p>{{#str}} norecentfeedback, block_my_feedback {{/str}}</p>
{{/nofeedback}}

<div class="text-right py-2">
    <a href="{{{ config.wwwroot }}}/grade/report/overview/"><i class="fa-solid fa-circle-arrow-right mr-1" aria-hidden="true"></i>{{#str}} viewgrades, block_my_feedback {{/str}}
    </a>
    <br>
    <a href="{{{allfeedbackurl}}}"><i class="fa-solid fa-circle-arrow-right mr-1" aria-hidden="true"></i>{{#str}} viewallfeedback, block_my_feedback {{/str}}
    </a>
</div>